import java.util.Scanner;
public class Operations {
    public static void main(String[] args) {
        int Addition,subtraction,divide,multiplication,modules;
        Scanner input_receiver = new Scanner(System.in);
        System.out.println("Enter the value1 to perform Arithmetic operations:");
        int int_variable = input_receiver.nextInt();
        System.out.println("Enter the value2 to perform Arithmetic operations");
        int int_variable2 = input_receiver.nextInt();
        Addition= int_variable+int_variable2;
        System.out.println("The Addition of Two variable:"+Addition);
        subtraction= int_variable-int_variable2;
        System.out.println("The Subtraction of Two variable:"+subtraction);
        divide= int_variable/int_variable2;
        System.out.println("The divition of Two variable:"+divide);
        multiplication= int_variable*int_variable2;
        System.out.println("The Multiplication of Two variable:"+multiplication);
        modules=int_variable%int_variable2;
        System.out.println("The Modules of Two variable:"+modules);
    }
}
//Operations using float datatypes
import java.util.Scanner;
public class Operations {
    public static void main(String[] args) {
        float Addition,subtraction,divide,multiplication,modules;
        Scanner input_receiver = new Scanner(System.in);
        System.out.println("Enter the Float Value to perform Arithmetic operations:");
        float int_variable = input_receiver.nextInt();
        System.out.println("Enter the Another float value to perform Arithmetic operations");
        float int_variable2 = input_receiver.nextInt();
        Addition= int_variable+int_variable2;
        System.out.println("The Addition of Two Float Values:"+Addition);
        subtraction= int_variable-int_variable2;
        System.out.println("The Subtraction of Two Float Values:"+subtraction);
        divide= int_variable/int_variable2;
        System.out.println("The divition of Two Float Values:"+divide);
        multiplication= int_variable*int_variable2;
        System.out.println("The Multiplication of Two Float Values:"+multiplication);
        modules=int_variable%int_variable2;
        System.out.println("The Modules of Two Float Values:"+modules);
    }
}
//Operations using double datatypes
import java.util.Scanner;
public class Operations {
    public static void main(String[] args) {
        Scanner input_receiver = new Scanner(System.in);
        System.out.println("Enter the Float Value to perform Arithmetic operations:");
        double int_variable;
        int_variable = input_receiver.nextInt();
        System.out.println("Enter the Another float value to perform Arithmetic operations");
        double int_variable2;
        int_variable2 = input_receiver.nextInt();
        double Addition = int_variable + int_variable2;
        System.out.println("The Addition of Two Float Values:"+Addition);
        double subtraction = int_variable - int_variable2;
        System.out.println("The Subtraction of Two Float Values:"+subtraction);
        double divide = int_variable / int_variable2;
        System.out.println("The divition of Two Float Values:"+divide);
        double multiplication = int_variable * int_variable2;
        System.out.println("The Multiplication of Two Float Values:"+multiplication);
        double modules = int_variable % int_variable2;
        System.out.println("The Modules of Two Float Values:"+modules);
    }
}


